---
import Layout from "../layouts/Layout.astro";
import Tag from "../components/home/Tag.astro"
---
<style>
  @import '../components/home/stars.css';
</style>

<Layout title="Conecta Digeek">
  <div class="flex w-full justify-around items-center h-[430px] bg-[#6163d4]">
    <div class="flex flex-col gap-4">
      <div class="text-8xl font-montserrat text-white font-medium">
        <p>Embrace</p>
        <p>Engineering</p>
      </div>
      <div class="flex flex-col text-white font-light text-3xl">Share your work to the world</div>
      <button class="text-lg rounded-2xl border-2 border-white bg-white font-semibold text-[#6163d4] px-3 py-1 w-1/3 transition duration-300 hover:scale-105 hover:bg-[#6163d4] hover:text-white">Start now</button>
    </div>
    <div class="relative w-1/3 h-full">
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
			<div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
      <div class="star"></div>
    </div>
  </div>
  <div class="flex flex-col w-full justify-center items-center">
    <div class="flex justify-center items-center p-10 gap-3">
        <div class="flex flex-col justify-center items-center space-y-1">
            <div class="text-lg font-semibold text-gray-700 mb-4">Trending tags</div>
            <div class="flex flex-wrap justify-center gap-1">
                <Tag href="/search?tag=programming" title="Programming" />
                <Tag href="/search?tag=writing" title="Writing" />
                <Tag href="/search?tag=machine-learning" title="Machine Learning" />
            </div>
            <div class="flex flex-wrap justify-center gap-1">
              <Tag href="/search?tag=data-science" title="Data Science" />
              <Tag href="/search?tag=self-improvement" title="Self Improvement" />
              <Tag href="/search?tag=productivity" title="Productivity" />
            </div>
            <div class="flex flex-wrap justify-center gap-1">
                <Tag href="/search?tag=relationships" title="Relationships" />
                <Tag href="/search?tag=technology" title="Technology" />
                <Tag href="/search?tag=politics" title="Politics" />
            </div>
        </div>
        <div class="bg-gray-800 w-0.5 h-auto self-stretch"></div>
        <div class="flex flex-col justify-center items-center space-y-1">
            <div class="text-lg font-semibold text-gray-700 mb-4 text-center">Tags for you</div>
            <div class="flex flex-wrap justify-center gap-1">
                <Tag href="/search?tag=programming" title="Programming" />
                <Tag href="/search?tag=writing" title="Writing" />
                <Tag href="/search?tag=machine-learning" title="Machine Learning" />
            </div>
            <div class="flex flex-wrap justify-center gap-1">
              <Tag href="/search?tag=data-science" title="Data Science" />
              <Tag href="/search?tag=self-improvement" title="Self Improvement" />
              <Tag href="/search?tag=productivity" title="Productivity" />
            </div>
            <div class="flex flex-wrap justify-center gap-1">
                <Tag href="/search?tag=relationships" title="Relationships" />
                <Tag href="/search?tag=technology" title="Technology" />
                <Tag href="/search?tag=politics" title="Politics" />
            </div>
        </div>
    </div>
</div>

</Layout>
